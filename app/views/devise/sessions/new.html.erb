<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 form-login">
      <!-- Insert form here -->
      <h2>Iniciar sesión</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, placeholder: "juan@gmail.com" %>
          <%= f.input :password, label:"Contraseña", required: false, placeholder: "••••••" %>
          <%= f.input :remember_me, label:"Recordar", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Ingresar", class: "btn btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>       
      <% end %>
    </div>
  </div>
</div>