<style>
 .contratos td{
   font-size: 15px;
 }

 .contratos h4{
   font-size: 15px;
 }

</style>
<h3>Contratos</h3>  
<hr>
<div class="container p-0">
  <%= form_tag contracts_path, method: :get do %>
    <div class="search-form-control form-group">   
      <%= text_field_tag :query,
        params[:query],
        class: "form-control string required ",
        id: "search_query",               
        placeholder: "Buscar cliente..."                
      %>      
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Buscar
      </button>
    </div>
    <% if params[:query].present? %>
      <p class="text-right mb-2"><%= link_to "(#{@contracts.count}) Limpiar filtro", contracts_path, class:"text-decoration-none" %></p>
    <% end %>    
  <% end %>  
</div>
<div class=" my-4">    
  
  <div class= "bg-white p-4">     
    <table class="table">
      <thead>
        <tr class="contratos">
          <th>Contrato</th>          
          <th>Fecha creacion</th>    
          <th>Cliente</th>                 
          <th>
            <%= link_to "Nuevo", new_contract_path, class: "btn btn-primary" %>
          </th>
                
        </tr>
      </thead>
      <tbody>
        <% @contracts.each do |contract| %>              
          <tr class="contratos">
            <td><%= contract.id %></td>              
            <td><%= contract.created_at.strftime('%d/%m/%Y') %></td>           
            <td><%= contract.user.name.titleize %></td>            
            <td>
              <%= link_to contract_path(contract), title:"ver +", class: "text-decoration-none " do %>
                <i class="far fa-eye mx-4 icon-order text-decoration-none text-dark"></i>                 
              <% end %>          
                         
            </td>           
          </tr>                   
        <% end %>                 
      </tbody>         
    </table>  
     
  </div>
</div>