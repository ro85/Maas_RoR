      

<!-- Modal -->
<div class="modal fade" id="editModal-<%= @contract.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar Alta</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for @contract, method: :PATCH do |f|  %>
        
        <div class="modal-body d-flex pt-1 pb-1 pl-1 mb-0">        
          <%= f.input :monday_start_hour, as: :time, html5: true , id:"input_hour"%>
          <%= f.input :monday_end_hour, as: :time, html5: true , id:"input_hour"%> 
        </div>  
        <div class="modal-body d-flex pt-1 pb-1 pl-1 ">
        <%= f.input :tuesday_start_hour, as: :time, html5: true , id:"input_hour"%>
        <%= f.input :tuesday_end_hour, as: :time, html5: true , id:"input_hour"%>
      </div>
      <div class="modal-body d-flex pt-1 pb-1 pl-1 ">
        <%= f.input :wednesday_start_hour, as: :time, html5: true , id:"input_hour"%>
        <%= f.input :wednesday_end_hour, as: :time, html5: true , id:"input_hour"%>
      </div>
      <div class="modal-body d-flex pt-1 pb-1 pl-1 ">
        <%= f.input :thursday_start_hour, as: :time, html5: true , id:"input_hour"%>
        <%= f.input :thursday_end_hour, as: :time, html5: true , id:"input_hour"%>
      </div>
      <div class="modal-body d-flex pt-1 pb-1 pl-1 ">
        <%= f.input :friday_start_hour, as: :time, html5: true , id:"input_hour"%>
        <%= f.input :friday_end_hour, as: :time, html5: true , id:"input_hour"%>
      </div>
      <div class="modal-body d-flex pt-1 pb-1 pl-1 ">
        <%= f.input :saturday_start_hour, as: :time, html5: true , id:"input_hour"%>
        <%= f.input :saturday_end_hour, as: :time, html5: true , id:"input_hour"%>
      </div> 
      <div class="modal-body d-flex pt-1 pb-1 pl-1 ">
        <%= f.input :sunday_start_hour, as: :time, html5: true , id:"input_hour"%>
        <%= f.input :sunday_end_hour, as: :time, html5: true , id:"input_hour"%>
      </div>    
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <%= submit_tag "Grabar", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>  