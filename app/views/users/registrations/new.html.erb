<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-8 col-sm-offset-4 form-login " id="form-pickup">
      <!-- Insert form here -->
      <h2>Registro</h2>
      <%= simple_form_for(resource, as: resource_name, url:  user_registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, required: true, label:"Nombre" %>
          <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }%>    
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, label:"Contraseña" %>
          <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, label:"Confirma contraseña" %>
          <% if User.count == 0 || User.where(admin: true).count == 0 %>
            <%= f.input :admin, required: true %>
          <% end %>           
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Registrame", class:"btn btn-primary", id:"btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>