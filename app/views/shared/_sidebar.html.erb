      <%# end %>      
    </div>
    <div class="navigator mt-4 px-4">
      <%= link_to contracts_path, class:"navigator-item #{'navigator-item-active' if request.path == contracts_path} primero text-decoration-none text-dark d-flex navigator-border " do %>
