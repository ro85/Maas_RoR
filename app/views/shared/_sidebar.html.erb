      <div class="head mt-4 px-4">
        <a class="head-link d-flex align-items-center justify-content-between">          
        </a>
      </div>
    </div>
    <div class="sidebar-info dropdown">
      <%#= link_to profile_path, class:" text-decoration-none text-dark d-flex" do %>
