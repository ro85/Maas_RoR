<%= form_tag calendar_confirmed_monitoring_shifts_path, method: :get do %>
  <div class="d-flex m-0">   
    
      <%= select_tag(:query_contract, options_for_select(@contracts.uniq),
        class: "form-select string required ",
        id: "search_query")                         
      %>  
      <%= select_tag(:query, options_for_select(@weeks.uniq),
        class: "form-select string required",
        id: "search_query")                         
      %>  
   
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> 
    </button>                
  </div>
  <% if params[:query].present? %>
    <p class="text-right mb-2 mt-2 ml-4"><%= link_to "Limpiar filtro", monitoring_shifts_path, class:"text-decoration-none" %></p>
  <% end %>    
<% end %>  